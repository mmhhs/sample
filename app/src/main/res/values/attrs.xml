<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--完成进度条-->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="roundTextColor" format="color" />
        <attr name="roundTextSize" format="dimension" />
        <attr name="roundMax" format="integer"/>
        <attr name="roundTextIsDisplayable" format="boolean"/>
        <attr name="roundStyle">
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>
    <!-- 指示器 -->
    <declare-styleable name="PageIndicatorView">
        <attr name="indicatorRadius" format="dimension|integer" />
        <attr name="indicatorSelectLength" format="dimension|integer" />
        <attr name="indicatorDefaultColor" format="color" />
        <attr name="indicatorSelectColor" format="color" />
        <attr name="indicatorDefaultDrawable" format="color|reference" />
        <attr name="indicatorSelectDrawable" format="color|reference" />
        <attr name="indicatorSpace" format="dimension|integer" />
        <attr name="indicatorGravity" format="integer" />
    </declare-styleable>
</resources>