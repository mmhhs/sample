<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowSwipeToDismiss">true</item>-->
        <!--<item name="android:windowFullscreen">false</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>
    <!-- Transparent theme. -->
    <style name="TransparentTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/title_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/title_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/title_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/title_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- TitlePagerLayout -->
    <style name="sample_style_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sample_text</item>
    </style>

    <!-- keep live -->
    <style name="LiveActivityStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
    </style>

    <!-- background style -->
    <style name="background_grey">
        <item name="android:background">@color/bg_grey</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
    <style name="background_white">
        <item name="android:background">@color/bg_white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
    <!-- home style -->
    <style name="activity_home_tab_text">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/sample_text</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
