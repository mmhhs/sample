<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowSwipeToDismiss">true</item>-->
        <!--<item name="android:windowFullscreen">false</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>
    <!-- Transparent theme. -->
    <style name="TransparentTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/title_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/title_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/title_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/title_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- TitlePagerLayout -->
    <style name="sample_style_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sample_text</item>
    </style>

</resources>
