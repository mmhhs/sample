<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    >


    <com.little.drop.view.TransProgressWheel
        android:id="@+id/drop_ultimate_load_more_progress_wheel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:matProg_barColor="@color/drop_progress_bar_on2"
        app:matProg_progressIndeterminate="true"
        android:layout_margin="15dp"
        />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/drop_end"
        android:id="@+id/drop_ultimate_load_more_end_layout" />

</LinearLayout>
