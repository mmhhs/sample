<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>
    <style name="picture_background_white">
        <item name="android:background">@color/picture_white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
    <style name="picture_text_16">
        <item name="android:textColor">@color/picture_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="picture_text_14">
        <item name="android:textColor">@color/picture_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="picture_text_black_16">
        <item name="android:textColor">@color/picture_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="picture_text_grey_deep_14">
        <item name="android:textColor">@color/picture_deep_grey</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="picture_text_white_18">
        <item name="android:textColor">@color/picture_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- listview style -->
    <style name="picture_style_listView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/picture_line_color</item>
        <item name="android:dividerHeight">0.4dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!-- fresco -->
    <style name="picture_fresco_centerCrop">
        <item name="fadeDuration">30</item>
        <item name="actualImageScaleType">centerCrop</item>
        <item name="placeholderImage">@color/picture_grey</item>
        <item name="placeholderImageScaleType">fitXY</item>
        <item name="failureImage">@color/picture_grey</item>
        <item name="failureImageScaleType">fitXY</item>
        <item name="retryImage">@color/picture_grey</item>
        <item name="retryImageScaleType">fitXY</item>
    </style>
    <style name="picture_fresco_fitCenter">
        <item name="fadeDuration">30</item>
        <item name="actualImageScaleType">fitCenter</item>
        <item name="placeholderImage">@color/picture_grey</item>
        <item name="placeholderImageScaleType">fitXY</item>
        <item name="failureImage">@color/picture_grey</item>
        <item name="failureImageScaleType">fitXY</item>
        <item name="retryImage">@color/picture_grey</item>
        <item name="retryImageScaleType">fitXY</item>
    </style>
    <style name="picture_fresco_oval">
        <item name="fadeDuration">30</item>
        <item name="actualImageScaleType">fitCenter</item>
        <item name="roundAsCircle">true</item>
        <item name="placeholderImage">@drawable/picture_avatar</item>
        <item name="placeholderImageScaleType">fitCenter</item>
        <item name="failureImage">@drawable/picture_avatar</item>
        <item name="failureImageScaleType">fitCenter</item>
        <item name="retryImage">@drawable/picture_avatar</item>
        <item name="retryImageScaleType">fitCenter</item>
    </style>

</resources>
