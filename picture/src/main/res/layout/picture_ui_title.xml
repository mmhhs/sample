<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/picture_navi_bar_height_top"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/picture_ui_title_layout"
    android:background="@color/picture_title_bg"
    >

    <LinearLayout
        android:id="@+id/picture_ui_title_back_layout"
        android:orientation="vertical"
        android:layout_width="@dimen/picture_navi_bar_height_top"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/picture_press"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/picture_back" />
    </LinearLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="25dp"
        android:background="@color/picture_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picture_image"
        style="@style/picture_text_white_18"
        android:layout_marginLeft="15dp"
        android:id="@+id/picture_ui_title_index" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/picture_ui_title_delete_layout"
        android:orientation="vertical"
        android:layout_width="@dimen/picture_navi_bar_height_top"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/picture_press"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/picture_delete" />
    </LinearLayout>

    <TextView
        style="@style/picture_text_14"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="@string/picture_done"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/picture_button_green"
        android:id="@+id/picture_ui_title_done" />
</LinearLayout>
