<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/picture_navi_bar_height_bottom"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/picture_ui_footer_layout"
    android:background="@color/picture_title_bg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="1/1"
        style="@style/picture_text_16"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:minWidth="70dp"
        android:background="@drawable/picture_menu_bg"
        android:id="@+id/picture_ui_footer_folder" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picture_original"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:paddingLeft="10dp"
        android:button="@drawable/picture_select"
        style="@style/picture_text_16"
        android:id="@+id/picture_ui_footer_original" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picture_choose"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:button="@drawable/picture_check"
        style="@style/picture_text_16"
        android:id="@+id/picture_ui_footer_choose" />

    <TextView
        android:background="@drawable/picture_press"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/picture_preview"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="15dp"
        style="@style/picture_text_16"
        android:id="@+id/picture_ui_footer_preview" />
</LinearLayout>
