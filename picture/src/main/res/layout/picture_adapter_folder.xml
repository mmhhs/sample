<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picture_folder_bg"
        android:gravity="center_vertical"
        android:id="@+id/picture_adapter_folder_layout">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:id="@+id/picture_adapter_folder_imageView"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/picture_text_black_16"
                android:text="文件夹名称"
                android:id="@+id/picture_adapter_folder_name"
                android:maxLines="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/picture_text_grey_deep_14"
                android:text="2张"
                android:id="@+id/picture_adapter_folder_count"
                android:layout_marginTop="5dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picture_adapter_folder_select"
            android:background="@drawable/picture_folder_select"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        </LinearLayout>




</LinearLayout>
